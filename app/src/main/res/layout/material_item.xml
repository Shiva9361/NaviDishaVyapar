<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="190dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/grey_rounded_border_background">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginEnd="8dp"
        android:src="@drawable/rectangle_gradient_s_deep_orange_a700_e_pink_700" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/txt_material_info_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="Material Info"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_cost_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Cost"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_location_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:paddingLeft="10dp"
            android:paddingBottom="4dp"
            android:text="Location"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:textStyle="bold" />
    </FrameLayout>

</FrameLayout>
