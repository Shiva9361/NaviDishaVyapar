<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLoginScreen"
    style="@style/LoginScreenStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="backarrow"
        android:src="@drawable/backarrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="I am"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="217dp" />


    <Button
        android:id="@+id/Buyer"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@drawable/i_am"
        android:ems="15"
        android:fontFamily="@font/montserrat_bold"
        android:text="Buyer"
        android:textColor="@color/text_grey"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="280dp" />

    <Button
        android:id="@+id/Agent"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="@drawable/i_am"
        android:ems="15"
        android:fontFamily="@font/montserrat_bold"
        android:text="Agent"
        android:textColor="@color/text_grey"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="280dp" />

    <Button
        android:id="@+id/Seller"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/i_am"
        android:ems="15"
        android:fontFamily="@font/montserrat_bold"
        android:text="Seller"
        android:textColor="@color/text_grey"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="280dp" />


    <EditText
        android:id="@+id/Name"
        android:layout_width="325dp"
        android:layout_height="0dp"
        android:background="@drawable/top_background"
        android:ems="15"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/text_grey"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="371dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:background="@drawable/middle_background"
        android:ems="15"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/text_grey"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="419dp" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:background="@drawable/bottom_background"
        android:ems="15"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Password"
        android:inputType="textVisiblePassword"
        android:minHeight="48dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/text_grey"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="467dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:background="@drawable/submit_background"
        android:ems="15"
        android:fontFamily="@font/montserrat_bold"
        android:text="REGISTER"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="556dp" />

    <TextView
        android:id="@+id/terms_and_conditions"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/TandC"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="619dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
